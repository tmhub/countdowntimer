<?xml version="1.0" ?>
<layout>
    <default>
        <reference name="head">
            <!-- Add jQuery 1.11.1 if selected Enable jQ for CountDown Timer-->
            <action method="addJs" ifconfig="tm_countdowntimer/general/add_jquery">
                <script>tm/jquery/jquery-1.11.1.min.js</script>
                <params><![CDATA[data-group="tm-js-cdt"]]></params>
            </action>
            <!-- Load FlipClock -->
            <action method="addJs">
                <script>tm/flipclock/flipclock.js</script>
                <params><![CDATA[data-group="tm-js-cdt"]]></params>
            </action>
            <action method="addItem" >
                <type>js_css</type>
                <name>tm/flipclock/flipclock.css</name>
            </action>
            <!-- Load SimpleTimer js-lib-->
            <action method="addJs">
                <script>tm/simpletimer/simpletimer.js</script>
                <params><![CDATA[data-group="tm-js-cdt"]]></params>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>js/tm/countdowntimer/starttimers.js</name>
            </action>
            <!-- Extesion styles and scripts -->
            <action method="addItem">
                <type>skin_css</type>
                <name>css/tm/countdowntimer.css</name>
            </action>
        </reference>
    </default>
</layout>
