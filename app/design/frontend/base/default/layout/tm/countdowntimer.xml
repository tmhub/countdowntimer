<?xml version="1.0" ?>
<layout>
    <default>
        <reference name="head">
            <!-- Load FlipClock -->
            <action method="addJs">
                <script>tm/lib/flipclock/flipclock.js</script>
                <params>defer</params>
            </action>
            <action method="addItem">
                <type>js_css</type>
                <name>tm/lib/flipclock/flipclock.css</name>
                <params>media="all"</params>
            </action>
            <!-- Load SimpleTimer js-lib-->
            <action method="addJs">
                <script>tm/lib/simpletimer/simpletimer.js</script>
                <params>defer</params>
            </action>
            <!-- Extesion styles and scripts -->
            <action method="addItem">
                <type>skin_css</type>
                <name>css/tm/countdowntimer.css</name>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>js/tm/countdowntimer/starttimers.js</name>
                <params>defer</params>
            </action>
            <!-- remove resource load if module output disabled -->
            <action method="removeItem" ifconfig="advanced/modules_disable_output/TM_CountdownTimer">
                <type>js</type>
                <name>tm/lib/flipclock/flipclock.js</name>
            </action>
            <action method="removeItem" ifconfig="advanced/modules_disable_output/TM_CountdownTimer">
                <type>js_css</type>
                <name>tm/lib/flipclock/flipclock.css</name>
            </action>
            <action method="removeItem" ifconfig="advanced/modules_disable_output/TM_CountdownTimer">
                <type>js</type>
                <name>tm/lib/simpletimer/simpletimer.js</name>
            </action>
            <action method="removeItem" ifconfig="advanced/modules_disable_output/TM_CountdownTimer">
                <type>skin_css</type>
                <name>css/tm/countdowntimer.css</name>
            </action>
            <action method="removeItem" ifconfig="advanced/modules_disable_output/TM_CountdownTimer">
                <type>skin_js</type>
                <name>js/tm/countdowntimer/starttimers.js</name>
            </action>
        </reference>
    </default>
</layout>
